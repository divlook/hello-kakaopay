{
    "compilerOptions": {
        "target": "ES2018",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "tests/**/*", "@types"],
    "exclude": ["dist", "node_modules"]
}
